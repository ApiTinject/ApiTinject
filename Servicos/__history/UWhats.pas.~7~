unit UWhats;

interface

uses
   System.SysUtils, System.Classes, uTInject,
    //units adicionais obrigatórias
   uTInject.ConfigCEF,            uTInject.Constant,    uTInject.JS,
   uTInject.Console,   uTInject.Diversos,   uTInject.AdjustNumber,  uTInject.Config,uTInject.Classes;

type
    TServico_Whats = class(TDataModule)
        Inject: TInject;
    procedure InjectGetQrCode(const Sender: TObject;
      const QrCode: TResultQRCodeClass);
    procedure InjectGetStatus(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Servico_Whats: TServico_Whats;

implementation

{%CLASSGROUP 'FMX.Controls.TControl'}

uses UServer, Generics.Base64;

{$R *.dfm}

procedure TServico_Whats.InjectGetQrCode(const Sender: TObject;
  const QrCode: TResultQRCodeClass);

begin
  TThread.Synchronize(nil, procedure
  begin
 if Inject.Authenticated = false then
  begin


    FServer.memo1.Text := trim(Copy(QrCode.AQrCode, pos(',',QrCode.AQrCode) + 1, length(QrCode.AQrCode)));
     FServer.Image1.Bitmap := Base64ToBitmap(FServer.Memo1.Text);// else
  end else
  begin
     FServer.Image1.Bitmap := nil;
     FServer.memo1.Lines.Clear;
     FServer.timer1.Enabled := false;
     FServer.timer3.Enabled := false;
  end;
  end);
end;

procedure TServico_Whats.InjectGetStatus(Sender: TObject);
begin
   case TInject(Sender).status of
    Server_ConnectedDown       : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Server_Disconnected        : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Server_Disconnecting       : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Server_Connected           : FServer.Label1.Text := '';
    Server_Connecting          : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Inject_Initializing        : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Inject_Initialized         : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Server_ConnectingNoPhone   : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Server_ConnectingReaderCode: FServer.Label1.Text := TInject(Sender).StatusToStr;
    Server_TimeOut             : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Inject_Destroying          : FServer.Label1.Text := TInject(Sender).StatusToStr;
    Inject_Destroy             : FServer.Label1.Text:= TInject(Sender).StatusToStr;
   end;


 If TInject(Sender).Status in [Server_ConnectingNoPhone, Server_TimeOut] Then
  Begin
    if TInject(Sender).FormQrCodeType = Ft_Desktop then
    Begin
       if TInject(Sender).Status = Server_ConnectingNoPhone then
          Inject.FormQrCodeStop;
    end else
    Begin
      if TInject(Sender).Status = Server_ConnectingNoPhone then
      Begin
        if not TInject(Sender).FormQrCodeShowing then
           TInject(Sender).FormQrCodeShowing := True;
      end else
      begin
        TInject(Sender).FormQrCodeReloader;
      end;
    end;

  End;
end;

end.
